<div class="container pb-5">
  
  <%= render 'public/searches/form' %>

  <% if notice %>
    <p class="notice text-light"><%= notice %></p>
  <% end %>
  <div class="row justify-content-center bg-white">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto text-left">
      <%= image_tag(asset_path('top_image.jpg'), class:"img-fluid mt-5") %>
      
      <div style="margin-top: 20px; padding-bottom: 50px;"> 
　　    <h4 align="center">イマジナリーゲーム博物館へ<br>ようこそ！</h4>
　　
　　    <h5 align="center">架空のゲームの感想を投げ合う<br>集団幻覚サイト</h5>
      </div>
    </div>
    
    <% if user_signed_in? %>
      <%# 表示しない %>
      <% else %>
      <div class="btn-wrapper col-10 mx-auto pb-5">
        <div class="row">
          <%= link_to "ゲストログイン", users_guest_sign_in_path, class: "btn btn-secondary btn-sm btn-block mb-3 sign_in", method: :post %>
        </div>
        <div class="row">
          <%= link_to "ログイン",new_user_session_path, class: "btn btn-info btn-sm btn-block mb-3 sign_in" %>
        </div>
        <div class="row">
          <%= link_to "新規登録",new_user_registration_path, class: "btn btn-success btn-sm btn-block sign_up" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>