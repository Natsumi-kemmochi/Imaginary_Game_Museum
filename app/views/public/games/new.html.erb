<div class="container">
  <div class="row">
    <div class="col-md-7 col-sm-12 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5 bg-light">
      <h5 class="text-dark p-4 mb-0">新規投稿</h5>
       <div class="form-body p-4">
         <!-- エラーメッセージ -->
         <% if @game.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @game.errors.count %>件のエラーが発生しました
            </h6>
            <% @game.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
         <% end %>

         <%= form_with model: Game.new, local: true do |f| %>
           <h6>メインビジュアル</h6>
           <% if false %>
             <% if @game.image.attached? %>
               <div>
               <%= image_tag(@game.image, class:"img-fluid") %>
               </div>
               <% else %>
             <% end %>
           <% end %>
  
           <%= f.file_field :image, accept: "image/*", class: "w-100" %>
             <div>
               <h6>タイトル(必須、30字まで)</h6>
               <%= f.text_field :title, class: "form-control" %>
             </div>
             <br>
             <div>
	            <h6>見出し（必須、50字まで）</h6>
                <%= f.text_area :caption, class: "form-control" %>
             </div>
             <br>
             <div>
               <h6>タグ（必須、40字まで）</h6>
                <%= f.text_field :name, class: 'form-control' %>
             </div>
             <br>
             <div>
               <h6>自由記述欄（400字まで）</h6>
               <%= f.text_area :main_text, class: "form-control", rows: 5 %>
             </div> 
           <hr>
          <%= f.submit '投稿' %>
        <% end %>
      </div>
    </div>
  </div>
</div>