<% games.each do |game| %>
  <div class="row mt-3 p-2 bg-light">
    <div class="col-lg-5 col-md-6">
      <%# メイン画像 %>
      <div class="m-2 p-2 d-flex" style="width:330px;height:250px">
        <%= link_to game_path(game.id) do %>
          <%= image_tag game.image, class: "align-items-center justify-content-center", style: "width: 320px; height: 240px;" %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-7 col-md-6 p-2"> 
      <h4 class="mt-1"><strong><%= game.title %></strong></h4>
      <h6 class="mt-2"><span><strong><%= game.caption %></strong></span></h6>
      <h6 class="mt-1 lh-lg"><span><%= test_method(game.main_text) %></span></h6>
      
        <% game.tags.each do |tag| %>
          <%= link_to tag.name, search_path(word: tag.name, range: "Tag", search: 'perfect_match'), class: "badge badge-secondary" %>
        <% end %>
        
      <div class="text-right">
        <h6 class="mt-3 text-right">
        <span><%= link_to "コメント(#{game.game_comments.count})", game_game_comments_path(game.id) %></span>
        <%# ブックマーク %>
        <% if game.bookmarked_by?(current_user) %>
          <%= link_to game_bookmark_path(game), method: :delete do %>
            ♥ <%= game.bookmarks.count %> 
          <% end %>
          <% else %>
          <%= link_to game_bookmark_path(game), method: :post do %>
            ♡ <%= game.bookmarks.count %> 
          <% end %>
        <% end %>
        </h6>
      </div>
      <%# ここまで %>     
      
    
      <h6 class="text-muted text-right"><span>最終更新　<%= game.updated_at&.strftime("%Y年%m月%d日%H時%M分") %></span></h6>
    </div>
  </div>
<% end %>

<div class="row justify-content-center mt-3 pb-3">
  <div class="Page navigation">
    <%= paginate games %>
  </div>
</div>


