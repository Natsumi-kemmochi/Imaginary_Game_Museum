<%= image_tag @detail.image, size: "200x200" %>

<%= @detail.sub_text %>

  <div>
    <%= link_to edit_game_detail_path(@detail.game_id, @detail.id), class: 'btn btn-light btn-outline-dark' do %>
      詳細の編集
    <% end %>
  </div>


  <div>
    <%= link_to game_detail_path(@detail.game_id, @detail.id), method: :delete, data: { confirm: "本当に削除しますか？" }, class: 'btn btn-light btn-outline-dark' do %>
      この記事を削除
    <% end %>
  </div>
  
