<div class="container">
  <div class="row no-gutters">
    <div class="col-md-7 col-sm-12 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">詳細情報の投稿</h5>
       <div class="form-body p-4">
         <!-- エラーメッセージ -->
         <% if @detail.errors.any? %>
           <ul class="alert alert-danger" role="alert">
             <h6 class="alert-heading">
               <%= @detail.errors.count %>件のエラーが発生しました
             </h6>
             <% @detail.errors.full_messages.each do |message| %>
              <li><%= message %></li>
             <% end %>
           </ul>
         <% end %>

          <!-- form_with部分 -->
          <%= form_with model: [@game, @detail], local: true do |f| %>
          <div>
            <h6>ビジュアル（必須）</h6>
              <%= f.file_field :image, accept: "image/*", class: "w-100" %>
          </div>
          <br>
          <div>
            <h6>自由記述欄（800字以内）</h6>
              <%= f.text_area :sub_text, class: "form-control", rows: 5 %>
          </div>
           <hr>
            <%= f.submit '投稿' %>
           <% end %>
      </div>
    </div>
  </div>
</div>