<div class="container">

<h1>詳細投稿</h1>

<!-- エラーメッセージ -->
<% if @detail.errors.any? %>
  <%= @detail.errors.count %>件のエラーが発生しました
  <ul>
  <% @detail.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
   </ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model: [@game, @detail] do |f| %>

  <h6>ビジュアル</h6>
  <%= f.file_field :image, accept: "image/*" %>

  <h6>自由記述欄</h6>
  <%= f.text_area :sub_text %>

  <%= f.submit '投稿' %>
<% end %>

</div>