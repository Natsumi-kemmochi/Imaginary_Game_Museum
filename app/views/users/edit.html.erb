<div class="container">
  <div class="row">

    <h6>ユーザー情報変更</h><br><br>
    
    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
      <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
      </ul>
    <% end %>
    
      <%= form_with model: @user do |f| %>
      
        <label for="inputImage">Image</label><br>
          <%= f.file_field :image, placeholder: "プロフィール画像", accept: "image/*" %> <br><br>
      
        <label for="inputName">ユーザー名</label><br>
          <%= f.text_field :name, autofocus: f, id:"inputName", placeholder:"User", style: "width:60%" %><br><br>
        <%#
        <label for="inputImage">プロフィール画像</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %> <br><br> 
        
        <label for="inputIntroduction">自己紹介文</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroducton", style: "width:60%" %><br>
        
        <label for="inputIntroduction">外部サイトへのリンク</label><br>
          <%= f.text_area :link, autofocus: true, id:"inputLink", style: "width:60%" %><br>
        
        <%= f.submit "更新する", class: 'btn btn-secondary' %>
      <% end %>

      <br><br>
      <div class="destroy_user">
        <%= link_to user_registration_path(@user.id), method: :delete, data: { confirm: "すべての投稿が削除されますが、本当に退会しますか？" }, class: 'btn btn-light btn-outline-dark' do %>
        退会する
        <% end %>
     </div>
     
  </div>
</div>





