<div class="container">
  <div class="row">
    <div class="col-md-7 col-sm-12 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">ログイン</h5>
       <div class="form-body p-4">

        <%= form_with model: @user, url: user_session_path do |f| %>
         <div class="field">
           <%= f.label :メールアドレス %><br />
           <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
         </div>

         <div class="field">
           <%= f.label :パスワード %><br />
           <%= f.password_field :password, autocomplete: "current-password" %>
         </div>

         <% if devise_mapping.rememberable? %>
           <div class="field">
             <%= f.check_box :ログイン %>
             <%= f.label :パスワードを記録する%>
           </div>
         <% end %>
         <div class="actions">
           <%= f.submit "ログイン" %>
         </div>
       <% end %>
       <br>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>