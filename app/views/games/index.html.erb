<div class="container bg-white">
  <div class="row justify-content-center">
   
    <p>新着投稿一覧</p>
    
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col">Title</th>
          <th scope="col">caption&text</th>
          <th scope="col"></th>
          <th  colspan="4"></th>
        </tr>
      </thead> 
      <tbody>
        <% @games.each do |game| %>
        <tr>
          <td>
            <%# メイン画像 %>
            <%= link_to game_path(game.id) do %>
              <%= image_tag game.image, size: "200x200" %>
            <% end %>
          </td>
          <td>
            <%# タイトル %>
            <strong><span><%= game.title %></span></strong>
          </td>
          <td>
            <%# キャプション %>
　          <span><%= game.caption %></span>
　          <br>
  　         <%# 自由記述欄 %>
          　<span><%= game.main_text %></span>
          　</td>
         </tr>
       <% end %>
      </tbody>
    </table>

<%= paginate @games %>


  </div>
 </div>
</div>