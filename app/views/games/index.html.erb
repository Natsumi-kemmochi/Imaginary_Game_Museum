<% @games.each do |game| %>
  
  <p>画像</p>
    <% if game.image.attached? %>
      <%= image_tag game.image, size: "200x200" %>
    <% else %>
    <% end %>
　<p>タイトル</p>
  <strong><span><%= link_to @game.title, "/games/#{@game.id}" %></span></strong>
